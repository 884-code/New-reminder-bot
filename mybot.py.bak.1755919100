        """SQLã‚¯ã‚¨ãƒªã‚’å®Ÿè¡Œã—ã€çµæœã‚’è¿”ã™"""
        conn = sqlite3.connect('reminder_bot.db')
        cursor = conn.cursor()
        try:
            cursor.execute(query, params)
            result = cursor.fetchall()
            conn.commit()
            return result
        except Exception as e:
            logger.error(f"Database query error: {e}")
            conn.rollback()
            return []
        finally:
            conn.close()

