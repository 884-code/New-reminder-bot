    if not ctx.guild: return
    if not is_admin(ctx.author.id, ctx.guild.id): await ctx.reply("âŒ Admin only"); return
    created=[]
    mg=await ensure_mgmt(ctx.guild); 
    if mg: created.append(mg.name)
    cnt=0
